<div class="prod-container">
  <table class="products">
    <tr>
      <th class="header">
        <h2>NAME</h2>
      </th>
      <th class="title right">
        <h2>QTY</h2>
      </th>
      <th class="header right">
        <h2>PRICE</h2>
      </th>
    </tr>
    {{#each model.products as |product|}}
      <tr>
        <th>{{product.name}}</th>
        <th class="prod">{{product.quantity}}</th>
        <th class="right">${{product.price}}</th>
        <th>
          <button type="button" class="btn edit">Edit</button>
          <button type="button" class="btn delete" onclick={{action "deleteProduct" product.id}}>Delete</button>
        </th>
      </tr>
    {{/each}}
    <tr>
      <th></th>
      <th></th>
      <th>Total Price ${{totalPrice}}</th>
    </tr>
  </table>

  <div class="add-product">
    {{#if isAddingProduct}}
      <form onsubmit={{action "saveProduct"}}>
        {{input type="text"  value=newProductName placeholder="New Product Name"}}
        {{input type="text"  value=newProductQuantity placeholder="New Product Quantity"}}
        {{input type="text"  value=newProductPrice placeholder="New Product Price"}}
        <button type="submit"  disabled={{isAddButtonDisabled}}>
          Add
        </button>
        <span class="rr-cancel-icon" onclick={{action "cancelAddProduct"}}>
          {{fa-icon "times"}}
        </span>
      </form>
    {{else}}
      <button type="button" name="button" class="add-btn" onclick={{action "addProduct"}}>Add new product</button>
    {{/if}}
  </div>
</div>
